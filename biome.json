{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off"
			},
			"correctness": {
				"noUnusedImports": "warn"
			}
		},
		"ignore": ["src/routeTree.gen.ts", "src/components/ui/**/*.tsx"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
